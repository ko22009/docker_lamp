<VirtualHost *:80>
    ServerName localhost
    DocumentRoot "/var/www/html/backend/web"
    <Directory "/var/www/html/backend/web">
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>

<VirtualHost *:8080>
    ServerName localhost
    DocumentRoot "/var/www/html/frontend/web"
    <Directory "/var/www/html/frontend/web">
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>
